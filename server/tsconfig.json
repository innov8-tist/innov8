{
    "ts-node": {
        "require": [
            "tsconfig-paths/register"
        ]
    },
    "compilerOptions": {
        "typeRoots": [
            "@types",
            "./node_modules/@types"
        ],
        "target": "ES2016",
        "module": "commonjs",
        "outDir": "dist",
        "rootDir": "src",
        "strict": true,
        "strictNullChecks": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "paths": {
            "$/*": [
                "./src/*"
            ]
        }
    },
    "include": [
        "./src/**/*.ts",
        ".eslintrc.cjs"
    ]
}
